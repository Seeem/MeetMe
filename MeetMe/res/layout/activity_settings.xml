<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="de.hfu.meetme.views.MMSettingsActivity"
    tools:ignore="MergeRootFrame" >

    <fragment
        android:id="@+id/preference_fragment"
        android:name="de.hfu.meetme.views.MMSettingsFragment"
        android:layout_width="wrap_content"
        android:layout_height="0dp" 
        android:layout_weight="9" />
    

    <fragment
        android:id="@+id/preference_save_button_fragment"
        android:name="de.hfu.meetme.views.MMSettingsSaveButtonFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>